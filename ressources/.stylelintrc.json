{
    "extends": "stylelint-config-standard",
    "rules": {
        "at-rule-no-unknown": [true, {
            "ignoreAtRules": ["function", "if", "else", "elseif", "for", "while", "each", "include", "mixin", "return", "content", "media", "import", "extend"]
        }],
        "indentation": 4
    }
}