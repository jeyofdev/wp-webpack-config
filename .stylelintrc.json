{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": 4,
    "no-empty-source": null,
    "string-quotes": "double",
    "at-rule-no-unknown": [true, {
        "ignoreAtRules": [
          "if", "else", "elseif", "for", "while", "each", 
          "include", "mixin", "function", "return", "content", 
          "extend", "debug", "media", "import"
        ]
      }]
  }
}